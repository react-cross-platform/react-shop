{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "jsx": "react",
    "lib": [
      "dom",
      "es2015.promise",
      "es2016",
      "es2016.array.include",
      "esnext"
    ],
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist/",
    "pretty": true,
    "removeComments": false,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es6",
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}
